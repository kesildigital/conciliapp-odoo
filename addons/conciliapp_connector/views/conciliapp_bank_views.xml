<odoo>
  <record id="view_conciliapp_bank_tree" model="ir.ui.view">
    <field name="name">conciliapp.bank.tree</field>
    <field name="model">conciliapp.bank</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="code" />
        <field name="active" />
      </tree>
    </field>
  </record>

  <record id="view_conciliapp_bank_form" model="ir.ui.view">
    <field name="name">conciliapp.bank.form</field>
    <field name="model">conciliapp.bank</field>
    <field name="arch" type="xml">
      <form string="Banco">
        <sheet>
          <group>
            <field name="name" />
            <field name="code" />
            <field name="active" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="conciliapp_bank_action" model="ir.actions.act_window">
    <field name="name">Bancos</field>
    <field name="res_model">conciliapp.bank</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>

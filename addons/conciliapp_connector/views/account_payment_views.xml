<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_account_payment_form_conciliapp" model="ir.ui.view">
    <field name="name">account.payment.form.conciliapp</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form" />
    <field name="arch" type="xml">
      <!-- Insertamos siempre visible en el form, debajo de Memo -->
      <xpath expr="//group[@name='group1']/field[@name='ref']" position="after">
        <separator string="Conciliapp" />
        <field name="conciliapp_sync_state" readonly="1" />
        <field name="conciliapp_external_id" readonly="1" />
        <field name="conciliapp_last_error" readonly="1" />
      </xpath>
    </field>
  </record>
</odoo>
